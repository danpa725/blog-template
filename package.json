{
    "name": "next-your-home",
    "version": "1.0.0",
    "author": {
        "name": "danpacho",
        "url": "https://github.com/danpacho"
    },
    "description": "cutomizable blog, powered by NextJs",
    "keywords": [
        "NextJs",
        "mdx",
        "blog"
    ],
    "license": "MIT",
    "scripts": {
        "dev": "next-remote-watch ./blog/",
        "seo": "ts-node -r tsconfig-paths/register --project tsconfig.node.json ./scripts/seo.ts",
        "next-build": "next build",
        "build": "pnpm next-build && pnpm seo",
        "start": "next start",
        "lint": "next lint",
        "post": "npx -y @danpacho/post-generator",
        "analyze": "ANALYZE=true pnpm next-build"
    },
    "dependencies": {
        "next": "12.1.6",
        "next-seo": "^5.4.0",
        "next-compose-plugins": "^2.2.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "preact": "^10.7.2",
        "mdx-bundler": "^9.0.1",
        "esbuild": "^0.14.39",
        "jotai": "^1.7.0",
        "rehype-katex": "^6.0.2",
        "rehype-prism-plus": "^1.4.1",
        "remark": "^14.0.2",
        "remark-gfm": "^3.0.1",
        "remark-math": "^5.1.1",
        "styled-components": "^5.3.3",
        "styled-reset": "^4.4.1",
        "gray-matter": "^4.0.3",
        "sharp": "^0.30.5",
        "image-size": "^1.0.1",
        "unist-util-visit": "^4.1.0",
        "fast-memoize": "^2.5.2"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^12.1.6",
        "@types/mdx": "^2.0.2",
        "@types/mdx-js__react": "^1.5.5",
        "@types/node": "^17.0.38",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@types/styled-components": "^5.1.25",
        "@types/unist": "^2.0.6",
        "next-remote-watch": "^1.0.0",
        "typescript": "4.7.2",
        "tsconfig-paths": "^4.0.0",
        "ts-node": "^10.8.0",
        "tslib": "^2.4.0",
        "eslint": "^8.16.0",
        "eslint-config-next": "12.1.6"
    }
}
