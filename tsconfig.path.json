{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@components/*": ["components/*"],
            "@assets/*": ["assets/*"],
            "@constants/*": ["constants/*"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"],
            "@api/*": ["api/*"],
            "@styles/*": ["styles/*"],
            "@atoms/*": ["atoms/*"],
            "@types/*": ["types/*"]
        },
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    }
}
